<MainScreen@MDScreen>:
    MDBoxLayout:
        orientation: "vertical"

        # Buttons
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            MDBoxLayout:
                size_hint_y: None
                height: dp(65)
                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "top"
                    MDIconButton:
                        icon: "arrow-left"
                AnchorLayout:
                    anchor_x: "right"
                    anchor_y: "top"
                    MDBoxLayout:
                        adaptive_size: True
                        MDIconButton:
                            icon: "magnify"
                        MDIconButton:
                            icon: "cart"
            MDBoxLayout:
                size_hint_y: None
                height: dp(55)
                spacing: dp(12)
                padding: dp(12)
                TabCard:
                    icon: 'shoe-sneaker'
                    text: 'shoes'
                    md_bg_color: app.theme_cls.primary_color
                TabCard:
                    icon: 'tshirt-crew'
                    text: 'T shirt'
                TabCard:
                    icon: 'redhat'
                    text: 'hat'

        # ScrollView
        MDBoxLayout:
            ScrollView:
                MDGridLayout:
                    cols: 2
                    padding: dp(20)
                    spacing: dp(20)
                    adaptive_height: True
                    ElementCard:
                        image: 'images/blue.png'
                        price: '120 $'
                        rate: '4.5/5'
                    ElementCard:
                        image: 'images/1.png'
                        price: '180 $'
                        rate: '5/5'
                    ElementCard:
                        image: 'images/red.png'
                        price: '80 $'
                        rate: '4.5/5'
                    ElementCard:
                        image: 'images/2.png'
                        price: '150 $'
                        rate: '3.0/5'
                    ElementCard:
                        image: 'images/yellow.png'
                        price: '100 $'
                        rate: '4.0/5'
                    ElementCard:
                        image: 'images/3.png'
                        price: '200 $'
                        rate: '3.0/5'

        # Bottom Navigation AppBar
        MDBoxLayout:
            size_hint_y: None
            md_bg_color: .9, .9, .9, 1
            height: dp(60)
            padding: [0, 0, 0, 15]
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'home'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                MDLabel:
                    text: 'Home'
                    valign: 'center'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'bell'
                MDLabel:
                    text: 'Notification'
                    valign: 'center'
                    halign: 'center'
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'account'
                MDLabel:
                    text: 'Profile'
                    valign: 'center'
                    halign: 'center'